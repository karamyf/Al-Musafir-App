<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/result_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your quiz result"
        android:textSize="24sp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/result_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your result will be displayed here"
        android:textSize="18sp" />


    <Button
        android:id="@+id/my_answers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:onClick="openMyAnswersPage"
        android:text="My Answers" />

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Restart Quiz"
        android:onClick="restartQuiz" />

</LinearLayout>
